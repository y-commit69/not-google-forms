// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Template {
  id          String     @id @default(uuid())
  title       String
  description String
  imageUrl    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  questions   Question[]
  forms       Form[]
  likes       Int        @default(0)
  comments    Comment[]
  tags        Tag[]
}

model Question {
  id         String   @id @default(uuid())
  templateId String
  template   Template @relation(fields: [templateId], references: [id])
  type       String
  text       String
  order      Int
  answers    Answer[]
  option1    String?
  option2    String?

  option1Checked Boolean @default(false)
  option2Checked Boolean @default(false)
}

model Form {
  id         String   @id @default(uuid())
  templateId String
  template   Template @relation(fields: [templateId], references: [id])
  userId     String
  createdAt  DateTime @default(now())
  answers    Answer[]
}

model Answer {
  id         String   @id @default(uuid())
  formId     String
  form       Form     @relation(fields: [formId], references: [id])
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
  value      String
}

model Comment {
  id         String   @id @default(uuid())
  text       String
  userId     String
  templateId String
  template   Template @relation(fields: [templateId], references: [id])
  createdAt  DateTime @default(now())
}

model Tag {
  id        String     @id @default(uuid())
  name      String     @unique
  templates Template[]
}
